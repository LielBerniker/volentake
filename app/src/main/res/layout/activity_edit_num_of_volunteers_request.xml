<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".edit_num_of_volunteers_request">

    <TextView
        android:id="@+id/editnumofvolunteerdescription"
        android:layout_width="360dp"
        android:layout_height="220dp"
        android:layout_marginTop="60dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/insrtnumofvolafterrequest"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="number"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.791"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editnumofvolunteerdescription" />

    <TextView
        android:id="@+id/requerdnumberofvoledirrequest"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="11dp"
        android:fontFamily="@font/oswald_font_wght"
        android:text="requerd number of volunteers"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/insrtnumofvolafterrequest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editnumofvolunteerdescription" />

    <Button
        android:id="@+id/btnupdatenumofvolreq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/blue"
        android:drawableLeft="@drawable/ic_update_1"
        android:fontFamily="@font/oswald_font_wght"
        android:text="update"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/requerdnumberofvoledirrequest" />
</androidx.constraintlayout.widget.ConstraintLayout>