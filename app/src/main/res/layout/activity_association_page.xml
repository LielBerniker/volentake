<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AssociationSignUp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnEdit"

                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/ic_edit_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <FrameLayout
                android:id="@+id/frameLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="420dp"
                    android:layout_height="100dp"
                    android:background="@drawable/box_shadow"
                    android:outlineAmbientShadowColor="@color/black"
                    android:outlineSpotShadowColor="@color/black"
                    android:scaleType="centerCrop"
                    tools:visibility="visible" />

            </FrameLayout>

            <Button
                android:id="@+id/btnBackToFeedOfPosts"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginStart="98dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/blue"
                android:drawableLeft="@drawable/ic_back_1"
                android:fontFamily="@font/oswald_font"
                android:text="@string/logOutText"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/btnInboxResponses"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnallvoleventsassoc"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/addPost"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="200dp"
                android:layout_marginEnd="80dp"
                android:background="@drawable/button_background"
                android:backgroundTint="@color/black"
                android:text="@string/plusBTN"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnInboxResponses"
                tools:ignore="MissingConstraints" />


            <TextView
                android:id="@+id/nameinsert2"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_marginStart="55dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/oswald_font"
                android:textAlignment="viewStart"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/frameLayout2" />

            <TextView
                android:id="@+id/emailinsert2"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="7dp"
                android:alpha="0.8"
                android:fontFamily="@font/oswald_font"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toBottomOf="@+id/nameinsert2" />

            <TextView
                android:id="@+id/phonenumberinsert2"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="7dp"
                android:alpha="0.8"
                android:fontFamily="@font/oswald_font"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/imageView5"
                app:layout_constraintTop_toBottomOf="@+id/nameinsert2" />


            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="55dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nameinsert2"
                app:srcCompat="@drawable/ic_email_1" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/phoneicon"
                app:layout_constraintStart_toEndOf="@+id/emailinsert2"
                app:layout_constraintTop_toBottomOf="@+id/nameinsert2"
                app:srcCompat="@drawable/ic_phone_1" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="40dp"
                android:text="@string/addVolunteeringPostTXT"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addPost"
                app:layout_constraintVertical_bias="1.0" />

            <Button
                android:id="@+id/btnseeallposts"
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/white_button_shadow_2"
                android:drawableLeft="@drawable/ic_heart_2"
                android:fontFamily="@font/oswald_font"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="My Volunteering Events"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frameLayout2" />

            <Button
                android:id="@+id/btnInboxResponses"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="98dp"
                android:backgroundTint="@color/blue"
                android:drawableLeft="@drawable/ic_inbox"
                android:fontFamily="@font/oswald_font"
                android:text="inbox"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btnBackToFeedOfPosts"
                app:layout_constraintTop_toBottomOf="@+id/btnallvoleventsassoc" />

            <Button
                android:id="@+id/btnallvoleventsassoc"
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/white_button_shadow_2"
                android:drawableLeft="@drawable/ic_heart_2"
                android:fontFamily="@font/oswald_font"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:text="All Volunteering Events"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnseeallposts" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>