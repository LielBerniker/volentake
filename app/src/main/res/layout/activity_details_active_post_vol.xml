<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutActivePostVol"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivePostVol">

    <ScrollView
        android:layout_width="402dp"
        android:layout_height="778dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <Button
                android:id="@+id/quitVolunteeringActivePostVol"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="96dp"
                android:backgroundTint="#268BBC"
                android:drawableLeft="@drawable/ic_back_1"
                android:fontFamily="@font/oswald_font_wght"
                android:text="quit"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtUpdateDescriptionPostActivePostVol"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/txtUpdateNamePostActivePostVol"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/oswald_font_wght"
                android:text="Name:"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/PostImage2ActivePostVol" />

            <TextView
                android:id="@+id/detailPostNameActivePostVol"
                android:layout_width="180dp"
                android:layout_height="45dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/oswald_font_wght"
                android:text="Name"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/PostImage2ActivePostVol" />

            <TextView
                android:id="@+id/detailLocationPostActivePostVol"
                android:layout_width="181dp"
                android:layout_height="34dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/oswald_font_wght"
                android:text="location"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detailPostNameActivePostVol" />

            <TextView
                android:id="@+id/detailNumVolPostActivePostVol"
                android:layout_width="181dp"
                android:layout_height="33dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/oswald_font_wght"
                android:text="numVol"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.994"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detailLocationPostActivePostVol" />

            <TextView
                android:id="@+id/detailTypePostActivePostVol"
                android:layout_width="182dp"
                android:layout_height="33dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/oswald_font_wght"
                android:text="type"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detailNumVolPostActivePostVol" />

            <TextView
                android:id="@+id/detailPhoneNumberPostActivePostVol"
                android:layout_width="180dp"
                android:layout_height="36dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/oswald_font_wght"
                android:text="Phone Number"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detailTypePostActivePostVol" />

            <TextView
                android:id="@+id/detailDescriptionPostActivePostVol"
                android:layout_width="192dp"
                android:layout_height="99dp"
                android:layout_marginTop="34dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/oswald_font_wght"
                android:text="description"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detailPhoneNumberPostActivePostVol" />

            <TextView
                android:id="@+id/txtTitleUpdatePostActivePostVol"
                android:layout_width="232dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/oswald_font_wght"
                android:text="Post Details"
                android:textAlignment="center"
                android:textColor="@color/dark_blue"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtUpdateLocationPostActivePostVol"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/oswald_font_wght"
                android:text="@string/addressText"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/detailLocationPostActivePostVol"
                app:layout_constraintHorizontal_bias="0.406"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtUpdateNamePostActivePostVol" />

            <TextView
                android:id="@+id/cityInsertVol1ActivePostVol"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/oswald_font_wght"
                android:text="@string/num_of_participantsText"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/detailNumVolPostActivePostVol"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtUpdateLocationPostActivePostVol" />

            <TextView
                android:id="@+id/txtUpdateTypePostActivePostVol"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/oswald_font_wght"
                android:text="@string/typeText"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/detailTypePostActivePostVol"
                app:layout_constraintHorizontal_bias="0.433"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cityInsertVol1ActivePostVol" />

            <TextView
                android:id="@+id/txtUpdatePhonePostActivePostVol"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/oswald_font_wght"
                android:text="@string/phoneText"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/detailPhoneNumberPostActivePostVol"
                app:layout_constraintHorizontal_bias="0.406"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtUpdateTypePostActivePostVol" />

            <TextView
                android:id="@+id/txtUpdateDescriptionPostActivePostVol"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="34dp"
                android:fontFamily="@font/oswald_font_wght"
                android:text="Description"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/detailDescriptionPostActivePostVol"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtUpdatePhonePostActivePostVol" />

            <ImageView
                android:id="@+id/PostImage2ActivePostVol"
                android:layout_width="180dp"
                android:layout_height="114dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtTitleUpdatePostActivePostVol"
                tools:srcCompat="@tools:sample/avatars" />

            <Button
                android:id="@+id/backtoactiveposts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.646"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detailDescriptionPostActivePostVol" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>