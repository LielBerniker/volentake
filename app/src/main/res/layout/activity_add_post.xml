<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout9"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VolunteerUserSignUp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/addposttittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/oswald_font_wght"
                android:text="@string/addVolunteeringPostTXT"
                android:textAlignment="center"
                android:textColor="#268BBC"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtpostname"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="52dp"
                android:text="@string/titleText"
                android:textAlignment="textStart"
                android:textSize="14sp"
                android:fontFamily="@font/oswald_font_wght"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addposttittle" />

            <EditText
                android:id="@+id/inputPostName"
                android:layout_width="180dp"
                android:layout_height="45dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="40dp"
                android:ems="10"
                android:fontFamily="@font/oswald_font_wght"
                android:inputType="textPersonName"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addposttittle" />

            <TextView
                android:id="@+id/textAddress"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="40dp"
                android:text="@string/addressText"
                android:textAlignment="viewStart"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/oswald_font_wght"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtpostname" />

            <EditText
                android:id="@+id/inputcity3"
                android:layout_width="180dp"
                android:layout_height="45dp"
                android:layout_marginTop="108dp"
                android:layout_marginEnd="50dp"
                android:ems="10"
                android:fontFamily="@font/oswald_font_wght"
                android:inputType="textPostalAddress"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inputPostName" />

            <TextView
                android:id="@+id/txtNumOfPartic"
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="56dp"
                android:text="@string/required_number_of_volunteersText"
                android:textSize="14sp"
                android:fontFamily="@font/oswald_font_wght"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.007"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addressnumber3" />

            <EditText
                android:id="@+id/InputNumOfPartic"
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="40dp"
                android:ems="10"
                android:fontFamily="@font/oswald_font_wght"
                android:inputType="number"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addressnuminput3" />

            <TextView
                android:id="@+id/txtType"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="36dp"
                android:text="@string/type_of_volunteeringText"
                android:textSize="14sp"
                android:fontFamily="@font/oswald_font_wght"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtNumOfPartic" />

            <EditText
                android:id="@+id/InputType"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:ems="10"
                android:fontFamily="@font/oswald_font_wght"
                android:inputType="textPersonName"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/InputNumOfPartic" />

            <TextView
                android:id="@+id/txtPhoneNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="36dp"
                android:text="@string/phoneText"
                android:textSize="14sp"
                android:fontFamily="@font/oswald_font_wght"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtType" />

            <EditText
                android:id="@+id/InputPhoneNum"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:ems="10"
                android:fontFamily="@font/oswald_font_wght"
                android:inputType="phone"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/InputType" />

            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="36dp"
                android:text="@string/descriptionText"
                android:textSize="14sp"
                android:fontFamily="@font/oswald_font_wght"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtPhoneNum" />

            <EditText
                android:id="@+id/InputDescreption"
                android:layout_width="220dp"
                android:layout_height="125dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:ems="10"
                android:fontFamily="@font/oswald_font_wght"
                android:inputType="textPersonName"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/InputPhoneNum" />

            <Button
                android:id="@+id/btnBackToAssoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:backgroundTint="#268BBC"
                android:fontFamily="@font/oswald_font_wght"
                android:text="@string/backToMainMenu"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnCreatePost"
                app:layout_constraintHorizontal_bias="0.069"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/InputDescreption" />

            <Button
                android:id="@+id/btnCreatePost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="40dp"
                android:backgroundTint="#268BBC"
                android:text="@string/create_volunteeringText"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:fontFamily="@font/oswald_font_wght"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/InputDescreption" />

            <TextView
                android:id="@+id/citytxt3"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="56dp"
                android:text="@string/cityText"
                android:textSize="14sp"
                android:fontFamily="@font/oswald_font_wght"
                app:layout_constraintEnd_toStartOf="@+id/inputcity3"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textAddress" />

            <TextView
                android:id="@+id/streettxt3"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="28dp"
                android:text="@string/streetText"
                android:textSize="14sp"
                android:fontFamily="@font/oswald_font_wght"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/citytxt3" />

            <EditText
                android:id="@+id/inputstreet3"
                android:layout_width="180dp"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="50dp"
                android:ems="10"
                android:fontFamily="@font/oswald_font_wght"
                android:inputType="textPersonName"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inputcity3" />

            <TextView
                android:id="@+id/addressnumber3"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="28dp"
                android:text="@string/numberText"
                android:textSize="14sp"
                android:fontFamily="@font/oswald_font_wght"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/streettxt3" />

            <EditText
                android:id="@+id/addressnuminput3"
                android:layout_width="180dp"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="50dp"
                android:ems="10"
                android:fontFamily="@font/oswald_font_wght"
                android:inputType="number"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inputstreet3" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>