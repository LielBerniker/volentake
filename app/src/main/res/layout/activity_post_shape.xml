<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VolunteerUserSignUp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/nameAss"
                android:layout_width="172dp"
                android:layout_height="19dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="nameAss"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.476"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/numVolpostinsert"
                android:layout_width="90dp"
                android:layout_height="15dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="numVol"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.551"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/typepostinsert" />

            <TextView
                android:id="@+id/citypostinsert"
                android:layout_width="68dp"
                android:layout_height="16dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="city"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.516"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nameAss" />

            <TextView
                android:id="@+id/typepostinsert"
                android:layout_width="70dp"
                android:layout_height="16dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="typePost"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.513"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/citypostinsert" />

            <TextView
                android:id="@+id/postcitytxt"
                android:layout_width="55dp"
                android:layout_height="15dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="city"
                android:textSize="8sp"
                app:layout_constraintEnd_toStartOf="@+id/citypostinsert"
                app:layout_constraintHorizontal_bias="0.552"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nameAss" />

            <TextView
                android:id="@+id/txtposttype"
                android:layout_width="53dp"
                android:layout_height="15dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="type"
                android:textSize="8sp"
                app:layout_constraintEnd_toStartOf="@+id/typepostinsert"
                app:layout_constraintHorizontal_bias="0.582"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/postcitytxt" />

            <TextView
                android:id="@+id/txttNumVol"
                android:layout_width="97dp"
                android:layout_height="19dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="num of volunteers"
                android:textSize="8sp"
                app:layout_constraintEnd_toStartOf="@+id/numVolpostinsert"
                app:layout_constraintHorizontal_bias="0.49"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtposttype" />

            <Button
                android:id="@+id/btnseedetails"
                android:layout_width="83dp"
                android:layout_height="31dp"
                android:layout_marginTop="13dp"
                android:text="see details"
                android:textSize="8sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.414"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/numVolpostinsert"
                app:layout_constraintVertical_bias="0.0" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.cardview.widget.CardView>