<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    tools:context=".VolunteerUserSignUp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="40dp"
            android:background="#A3C9D7"
            android:backgroundTint="#A3C9D7"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/nameMessage"
                android:layout_width="172dp"
                android:layout_height="19dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="nameAss"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/locationPost"
                android:layout_width="90dp"
                android:layout_height="15dp"
                android:gravity="center"
                android:text="numVol"
                android:textSize="10sp"
                tools:layout_editor_absoluteX="206dp"
                tools:layout_editor_absoluteY="99dp" />

            <TextView
                android:id="@+id/mailVolunteer"
                android:layout_width="68dp"
                android:layout_height="16dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="city"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@+id/txtMailVol"
                app:layout_constraintTop_toBottomOf="@+id/nameMessage" />

            <TextView
                android:id="@+id/numVolOfPost"
                android:layout_width="70dp"
                android:layout_height="16dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="typePost"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@+id/txtNumVolOfPost"
                app:layout_constraintTop_toBottomOf="@+id/mailVolunteer" />

            <TextView
                android:id="@+id/txtMailVol"
                android:layout_width="55dp"
                android:layout_height="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="city"
                android:textSize="8sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nameMessage" />

            <TextView
                android:id="@+id/txtNumVolOfPost"
                android:layout_width="53dp"
                android:layout_height="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="type"
                android:textSize="8sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtMailVol" />

            <TextView
                android:id="@+id/txtLocationPost"
                android:layout_width="97dp"
                android:layout_height="19dp"
                android:gravity="center"
                android:text="num of volunteers"
                android:textSize="8sp"
                tools:layout_editor_absoluteX="186dp"
                tools:layout_editor_absoluteY="59dp" />

            <Button
                android:id="@+id/btnseedetails"
                android:layout_width="83dp"
                android:layout_height="31dp"
                android:layout_marginTop="13dp"
                android:text="see details"
                android:textSize="8sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.414"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/locationPost"
                app:layout_constraintVertical_bias="0.0" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.cardview.widget.CardView>