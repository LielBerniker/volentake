<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentReqAss"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VolunteerUserSignUp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/nameMessage"
                android:layout_width="172dp"
                android:layout_height="19dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="volunteer request"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.476"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/mailVolunteer"
                android:layout_width="140dp"
                android:layout_height="23dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.56"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nameMessage" />

            <TextView
                android:id="@+id/txtMailVol"
                android:layout_width="75dp"
                android:layout_height="18dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="mail"
                android:textSize="10sp"
                app:layout_constraintEnd_toStartOf="@+id/mailVolunteer"
                app:layout_constraintHorizontal_bias="0.428"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nameMessage" />

            <TextView
                android:id="@+id/txtNumVolOfPost"
                android:layout_width="93dp"
                android:layout_height="17dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="27dp"
                android:gravity="center"
                android:text="num of Volunteers"
                android:textSize="10sp"
                app:layout_constraintEnd_toStartOf="@+id/editTextNumber"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtMailVol" />

            <TextView
                android:id="@+id/txtContentMessage"
                android:layout_width="97dp"
                android:layout_height="19dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="25dp"
                android:gravity="center"
                android:text="content"
                android:textSize="10sp"
                app:layout_constraintEnd_toStartOf="@+id/contantinsert"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtNumVolOfPost" />

            <Button
                android:id="@+id/btnbackrequest"
                android:layout_width="67dp"
                android:layout_height="33dp"
                android:layout_marginTop="8dp"
                android:text="back"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.529"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/contantinsert" />

            <Button
                android:id="@+id/btnsendrequest"
                android:layout_width="114dp"
                android:layout_height="34dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="10dp"
                android:text="send request"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnbackrequest"
                app:layout_constraintHorizontal_bias="0.812"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/contantinsert"
                app:layout_constraintVertical_bias="0.0" />

            <EditText
                android:id="@+id/contantinsert"
                android:layout_width="153dp"
                android:layout_height="62dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.589"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextNumber" />

            <EditText
                android:id="@+id/editTextNumber"
                android:layout_width="144dp"
                android:layout_height="24dp"
                android:layout_marginTop="7dp"
                android:ems="10"
                android:inputType="number"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.569"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mailVolunteer" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.cardview.widget.CardView>