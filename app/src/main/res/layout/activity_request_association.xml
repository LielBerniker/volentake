<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentReqAss"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VolunteerUserSignUp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/nameMessage"
                android:layout_width="172dp"
                android:layout_height="19dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="nameMessage"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.476"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/mailVolunteer"
                android:layout_width="91dp"
                android:layout_height="16dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="mailVolunteer"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.516"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nameMessage" />

            <TextView
                android:id="@+id/numVolOfPost"
                android:layout_width="87dp"
                android:layout_height="17dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="numVolOfPost"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.509"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mailVolunteer" />

            <TextView
                android:id="@+id/txtMailVol"
                android:layout_width="75dp"
                android:layout_height="18dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="mail"
                android:textSize="8sp"
                app:layout_constraintEnd_toStartOf="@+id/mailVolunteer"
                app:layout_constraintHorizontal_bias="0.366"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nameMessage" />

            <TextView
                android:id="@+id/txtNumVolOfPost"
                android:layout_width="74dp"
                android:layout_height="16dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="num of Volunteers"
                android:textSize="8sp"
                app:layout_constraintEnd_toStartOf="@+id/numVolOfPost"
                app:layout_constraintHorizontal_bias="0.369"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtMailVol" />

            <TextView
                android:id="@+id/txtLocationPost"
                android:layout_width="97dp"
                android:layout_height="19dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="location"
                android:textSize="8sp"
                app:layout_constraintEnd_toStartOf="@+id/locationPost"
                app:layout_constraintHorizontal_bias="0.49"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtNumVolOfPost" />

            <TextView
                android:id="@+id/txtContentMessage"
                android:layout_width="97dp"
                android:layout_height="19dp"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:text="content"
                android:textSize="8sp"
                app:layout_constraintEnd_toStartOf="@+id/contentMessage"
                app:layout_constraintHorizontal_bias="0.464"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtLocationPost" />

            <TextView
                android:id="@+id/locationPost"
                android:layout_width="140dp"
                android:layout_height="14dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="104dp"
                android:gravity="center"
                android:text="locationPost"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/numVolOfPost" />

            <TextView
                android:id="@+id/contentMessage"
                android:layout_width="143dp"
                android:layout_height="55dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="100dp"
                android:gravity="center"
                android:text="content"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/locationPost" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.cardview.widget.CardView>