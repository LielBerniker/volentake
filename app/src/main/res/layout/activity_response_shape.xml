<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentResponse"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    tools:context=".AssociationPage">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/white_button_shadow_1"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/nameResponse2Vol"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="60dp"
                android:fontFamily="@font/oswald_font"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/mailVolunteerResponse2Vol"
                android:layout_width="153dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/oswald_font"
                android:textAlignment="viewStart"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txtMailVolResponse2Vol"
                app:layout_constraintTop_toBottomOf="@+id/assocNameResponse2Vol" />

            <TextView
                android:id="@+id/assocNameResponse2Vol"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/oswald_font"
                android:textAlignment="viewStart"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/txtPostNameResponse2Vol"
                app:layout_constraintTop_toBottomOf="@+id/nameResponse2Vol" />

            <TextView
                android:id="@+id/txtMailVolResponse2Vol"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:alpha="0.7"
                android:background="@drawable/ic_email_3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtPostNameResponse2Vol" />

            <TextView
                android:id="@+id/txtPostNameResponse2Vol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/oswald_font"
                android:text="Association Name:"
                android:textAlignment="viewStart"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nameResponse2Vol" />

            <Button
                android:id="@+id/btnSeeDetailsResponse2Vol"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_more_1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/new_massage_box_update_res"
                android:layout_width="94dp"
                android:layout_height="29dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:background="@color/white"
                android:scrollbarThumbHorizontal="@drawable/ic_inbox"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@+id/mailVolunteerResponse2Vol"
                app:layout_constraintTop_toBottomOf="@+id/assocNameResponse2Vol" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>

    <!--    </ScrollView>-->

</androidx.cardview.widget.CardView>